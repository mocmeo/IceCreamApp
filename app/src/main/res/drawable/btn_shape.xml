<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="250dp"
                android:height="50dp" />
            <solid android:color="#0072BC" />
            <corners android:radius="0dp"/>
            <gradient android:startColor="#29B6F6"
                android:endColor="#0072BC"
                android:angle="45" />
        </shape>
    </item>

    <item
        android:top="8dp"
        android:bottom="0dp"
        android:left="-195dp"
        android:right="70dp">
        <rotate
            android:fromDegrees="130">
            <shape android:shape="rectangle">
                <solid android:color="#F5F5F5" />
            </shape>
        </rotate>
    </item>
</layer-list>