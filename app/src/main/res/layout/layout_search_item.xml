<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher">

            </ImageView>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/imageViewProduct"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="#212121" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewProducType"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icecream_label" />

                    <TextView
                        android:id="@+id/textViewProductType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="ICE CREAM"
                        android:textColor="#FBC02D"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:text="Canada"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textViewProductName"
                android:text="Cinco de Mayo is on Thursday"
                android:textColor="@color/information_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:text="Price"
                android:textColor="#D84315"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/rating_icecream_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewProductDescription"
                android:layout_alignParentBottom="true"
                app:srb_borderColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="110dp"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_starSize="12dp"
                app:srb_stepSize="0.5" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>