<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        android:layout_margin="2dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:id="@+id/image_milkshake_home"
                android:src="@mipmap/ic_launcher"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/image_milkshake_home"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="#212121" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/milkshake_label" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="MILKSHAKE"
                        android:textColor="#FBC02D"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/name_milkshake_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_milkshake_home"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Canada"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price_milkshake_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_milkshake_home"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:textColor="#D84315"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location_milkshake_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_milkshake_home"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Hà Nội"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>