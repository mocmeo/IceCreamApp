<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:elevation="4dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="3dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:id="@+id/image_milkshake_home"
                android:src="@mipmap/ic_launcher"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/image_milkshake_home">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="#212121" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/milkshake_label" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="MILKSHAKE"
                        android:textColor="#FBC02D"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/name_milkshake_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_milkshake_home"
                android:layout_marginLeft="10dp"
                android:text="Canada"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/price_milkshake_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_milkshake_home"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:text="Price"
                android:textColor="#D84315"
                android:textSize="11dp"/>

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/rating_icecream_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_milkshake_home"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_starSize="12dp"
                app:srb_stepSize="0.5"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>