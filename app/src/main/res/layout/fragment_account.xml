<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.icecreamapp.activity.HomeActivity">

    <ImageView
        android:id="@+id/roundedImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha="0.7"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/intro_ice_cream" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-80dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewEditProfile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_mode_edit_24dp" />

                <ImageView
                    android:id="@+id/imageViewCancelEdit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_clear_24dp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/imageViewSaveProfile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_done_24dp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/textViewNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:minWidth="170dp"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:gravity="left|center"
                    android:minWidth="170dp"
                    android:padding="5dp"
                    android:textColor="@color/information_color"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/imageViewAvatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:foreground="@drawable/cover_background"
                    android:src="@drawable/user_profile" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/textViewPhone"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:textColor="@color/information_color"
                    android:textSize="14dp"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:gravity="fill_vertical"/>

                <EditText
                    android:id="@+id/textViewAddress"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="10dp"
                    android:textColor="@color/information_color"
                    android:textSize="14dp"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:gravity="fill_vertical"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewEditAccount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_mode_edit_24dp" />
                <ImageView
                    android:id="@+id/imageViewSaveAccount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_done_24dp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/imageViewCancelEditAccount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_clear_24dp"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="Account" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp">

                <EditText
                    android:id="@+id/textViewAccount"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_24dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/information_color"
                    android:textSize="14dp"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:gravity="fill_vertical"/>
                <EditText
                    android:id="@+id/textViewOldPassword"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_24dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/information_color"
                    android:textSize="14dp"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:gravity="fill_vertical"
                    android:inputType="textPassword"
                    android:hint="Enter old password"
                    android:textColorHint="@android:color/darker_gray"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/textViewPassword"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_24dp"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14dp"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:gravity="fill_vertical"
                    android:inputType="textPassword"
                    android:hint="Enter new password"
                    android:textColorHint="@android:color/darker_gray"
                    android:text="• • • • • • • • • • • •"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
